<odoo>
     <!-- Search View for Estate Property -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="facades" />
                <field name="state" invisible="1"/>
                <filter name="filter_state_name" string="New" domain="[('state', '=', 'new')]" />
                <filter name="group_by_postcode" string="Postcode" context="{'group_by':'postcode'}" />
                <separator />
                <group string="Filter">
                    <filter string="available" name="available" domain="[('state', 'in', ('new', 'canceled'))]" />
                </group>
            </search>
           
        </field>
    </record>
    <!-- Form View for Estate Property -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
               <header>
                    <field name="state" widget="statusbar" />
               </header>
               <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" />
                        </div>
                        <h1 class="mb32">
                            <field name="name" class="mb16" />
                        </h1>
                    </div>
                     <group>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                     <group>
                        <field name="property_type_id" />
                    </group>
                    <group>
                        <!-- Left Column -->
                        <group>
                            
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_offer"/>
                        </group>
                        <!-- Right Column -->
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="garden_area" />
                                    <field name="total_area" />
                                    <field name="garden"/>
                                </group>
                                <group>  
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden_orientation" />
                                </group>
                            </group>
                        
                        </page>
                        <page string="Offer">
                            <field name="offer_ids">
                                <tree decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                                    <field name="property_id"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <button name="action_accept" invisible="status in('accepted', 'refused')" type="object" icon="fa-check" title="Accept Offer"/>
                                    <button name="action_refuse" invisible="status in('accepted', 'refused')" type="object" icon="fa-times" title="Refuse Offer"/>
                                    <field name="status"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Extra Information">
                            <group>
                               
                            </group>
                        </page>
                    </notebook>
               </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View for Estate Property -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties">
                <field name="name"/>
                <field name="property_type_id" />
                <field name="state"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
            </tree>
        </field>
    </record>

    <!-- Action for Properties -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context"> {'search_default_available': True}</field>
    </record>

</odoo>
